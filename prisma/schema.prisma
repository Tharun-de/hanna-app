// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writing {
  id        String    @id @default(cuid())
  title     String?
  content   String
  sectionId String?
  mood      String?
  date      String? // Consider changing to DateTime if you store actual dates
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  section   Section?  @relation(fields: [sectionId], references: [id], onDelete: SetNull)

  @@index([sectionId])
}

model Section {
  id        String    @id @default(cuid())
  title     String
  iconName  String    // Store the name of the icon (e.g., "BookOpen")
  accent    String    // Store the accent color name (e.g., "emerald")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  order     Int       @default(0) // For maintaining section order

  writings  Writing[] // A section can have multiple writings

  @@index([order])
}

model SiteSettings {
  id          String    @id @default("singleton") // Use a fixed ID for single-row table
  mainHeader  String?
  twitterUrl  String?
  instagramUrl String?
  snapchatUrl String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
} 