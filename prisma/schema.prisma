// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writing {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @default("")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sections  Section[]

  @@map("writings")
}

model Section {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @default("")
  order     Int      @default(0)
  writingId Int
  writing   Writing  @relation(fields: [writingId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sections")
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("settings")
}

model SiteSettings {
  id          String    @id @default("singleton") // Use a fixed ID for single-row table
  mainHeader  String?
  twitterUrl  String?
  instagramUrl String?
  snapchatUrl String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
} 